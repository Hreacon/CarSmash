@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}
<div class="container">
    <div class="row">
        <br />
        <h2>@ViewData["Title"].</h2>
        <form asp-controller="Account" asp-action="Register" method="post" class="col s12" role="form">
            <div class="row">

                <h4>Create a new account.</h4>
                <hr />
                <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>
                <div class="input-field">
                    <label asp-for="UserName"></label>
                    <input asp-for="UserName" class="validate" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="input-field">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="validate" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="input-field">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="validate" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="input-field">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" class="validate" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="input-field col s12">
                    <button type="submit" class="btn btn-default">Register</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}