@model CarSmash.Models.Product

@{
    ViewData["Title"] = "Create";
}
<div class="container">
    <h2>Create</h2>
    <div class="row">
        <h4>Product</h4>
        <hr />
        @*enctype required for for file uploads*@
        <form asp-action="Create" asp-controller="Products" method="post" class="col s12" enctype="multipart/form-data">
            <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
            <div class="row">

                <div class="input-field">
                    <input asp-for="Description" type="text" class="validate" autofocus />
                    <label asp-for="Description"></label>
                    <span asp-validation-for="Description" class="text-danger" />
                </div>

                <div class="input-field">
                    <input asp-for="Name" type="text" class="validate" />
                    <label asp-for="Name"></label>
                    <span asp-validation-for="Name" class="text-danger" />
                </div>

                <div class="input-field">
                    <input asp-for="Price" class="validate" type="number" step=".01"/>
                    <label asp-for="Price"></label>
                    <span asp-validation-for="Price" class="text-danger" />
                </div>

                <div class="input-field">
                    <input type="file" name="files" multiple />
                </div>
            </div>
        <div class="input-field">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
        </form>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>