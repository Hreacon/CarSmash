@{
    var product = Model as CarSmash.Models.Product;
}
<div class="col s12 m6 l4">
    <a href="/Home/ProductDetails/@product.ProductId" class="productTile">
        <div class="card">
            <div class="card-image">
                <img src="@product.Images.ElementAtOrDefault(0).Url">
            </div>
            <div class="card-content">
                <span>@product.Name</span>
                <span>@string.Format("{0:C}", product.Price)</span>
            </div>
        </div>
    </a>
</div>

