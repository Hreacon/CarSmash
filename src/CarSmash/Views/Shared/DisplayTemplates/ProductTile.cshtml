@{
    var product = Model as CarSmash.Models.Product;
}
<div class="col s12 m6 l4">
    <a href="/Home/ProductDetails/@product.ProductId" class="productTile">
        <div class="card">
            <div class="card-image">
                @*<img src="https://cdn.shopify.com/s/files/1/0196/3764/products/mainmcm_small.png?v=1355741396" />*@
                <img src="@product.Images.ElementAtOrDefault(0).Url">
            </div>
            <div class="card-content">
                <span class="card-title">@product.Name</span>

                <p>
                    @product.Description
                </p>
                <span>$@product.Price</span>
            </div>
            
        </div>
    </a>
</div>

